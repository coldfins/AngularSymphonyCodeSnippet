{% include 'APIBundle:Mail:header_template.html.twig' %}

<table width="100%" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td valign="top" class="container">
            <div class="content" style="padding: 0px; overflow: hidden; max-width: 600px; margin: 0px auto; display: block; border-bottom: 1px solid rgb(208, 208, 208);" >
                <table border="0" align="center" cellpadding="0" cellspacing="0" bgcolor="#ffffff" width="100%" style="font-family: Open Sans,sans-serif; font-size:14px; color:#383838;" >
                    <tr height="40"><td>&nbsp;</td></tr>
                    <tr height="50">
                        <td style="font-size:20px;">
                            Hi {{ user.name | capitalize }},
                        </td>
                    </tr>
                    <tr height="20">
                        <td>
                            Your offer: <b>{{ offer.identifier }}</b> is about to close soon: <b>{{ offer.expiryTimestamp | date("d/m/Y - H:i:s", "UTC") }}</b> ( UTC )
                        </td>
                    </tr>
                    <tr height="40"><td>&nbsp;</td></tr>
                    <tr height="100">
                        <td align="center">
                            <a href="{{ link }}" style="background-color: #383838; padding: 14px 28px 14px 28px; -webkit-border-radius: 500px; border-radius: 500px; line-height: 18px !important; letter-spacing: 0.125em; text-transform: uppercase; font-size: 13px; font-family: 'Open Sans', Arial, sans-serif; font-weight: 400; color: #ffffff; text-decoration: none; display: inline-block; line-height: 18px !important;-webkit-text-size-adjust:none;">Check my offer</a>
                        </td>
                    </tr>
                </table>
            </div>
        </td>
    </tr>
</table>

{% include 'APIBundle:Mail:footer_template.html.twig' %}