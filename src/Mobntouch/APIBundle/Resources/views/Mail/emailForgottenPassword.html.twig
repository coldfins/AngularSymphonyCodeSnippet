{% include 'APIBundle:Mail:header_template.html.twig' %}

<table width="100%" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td valign="top" class="container" align="center">
            <div class="content" style="padding: 0px; overflow: hidden; max-width: 600px; margin: 0px auto; display: block;" >
                <table border="0" cellpadding="0" cellspacing="0" width="100%" bgcolor="#ffffff" style="border-top: 1px solid rgb(208, 208, 208); border-bottom: 1px solid rgb(208, 208, 208);" >
                    <tr>
                        <td valign="top">
                            <h2>{{ user.name }}, you requested a password reset.</h2>
                            <p>To reset your Mobintouch password, please click <a href="{{ link }}">here</a> or paste the following link into your browser:</p>
                            <p>{{ link }}</p>
                            <p>The link will expire in 24 hours.</p>
                            <p><i>The Mobintouch Team</i></p>
                        </td>
                    </tr>
                </table>
            </div>
        </td>
    </tr>
</table>

